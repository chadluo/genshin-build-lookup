{
    "compilerOptions": {
        "lib": [
            "DOM",
            "ESNext"
        ],
        "module": "NodeNext",
        "moduleDetection": "force",
        "moduleResolution": "NodeNext",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        // "noUncheckedIndexedAccess": true,
        "outDir": "public",
        "sourceMap": true,
        "strictNullChecks": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    },
    "exclude": [
        "src/tests/yuanliao.spec.ts"
    ],
    "extends": "@tsconfig/recommended/tsconfig.json",
    "include": [
        "src/*.ts",
        "src/models/*.ts",
        "src/components/*.ts",
        "src/tests/*.ts"
    ]
}